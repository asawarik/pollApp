    <input type="hidden" class = "form-control" placeholder = "cal_id" name="cal_id" id="cal_id">
    <input type="hidden" class = "form-control" name="messageSendUser" id="messageSendUser" placeholder = "matched person">
    <input type="hidden" class = "form-control" name = "currCalId" id="currCalId" value=<%=user.cal_id%> >
