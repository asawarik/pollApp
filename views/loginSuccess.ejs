<H1> Welcome <%= user.username %> </H1>

<form method="post" action="/users/poll">
    <div class="form-group col-md-8">
      <label for="otherUser">Choose a user</label>
      <select class="form-control">
      <% for(var i=0; i<allUsers.length; i++){ %>
        <option data-value = <%=JSON.stringify(allUsers[i])%>>
        <%= allUsers[i].username %>
        </option>
        <% } %>
      </select>
    </div>
    <input type="hidden" class = "form-control" name="access_token" id="access_token" placeholder = "access_token">
